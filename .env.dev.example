# ==========================================
# MODIFY Project - Development Environment
# ==========================================

# --- PROJECT SETTINGS ---
PROJECT_NAME="MODIFY AI Shopping Mall"
# dev | prod
ENVIRONMENT=dev
DEBUG=true
# Asia/Seoul
TZ=Asia/Seoul

# --- SECURITY (CRITICAL) ---
# 32자 이상 필수. openssl rand -hex 32 등으로 생성 권장
# 예: 098f6bcd4621d373cade4e832627b4f6...
JWT_SECRET_KEY=change_this_to_a_secure_random_string_min_32_chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Frontend 데이터 암호화용 키 (32 bytes base64 encoded string 권장)
ENCRYPTION_KEY=change_this_to_32_byte_key_for_fernet_encryption

# --- DATABASE (PostgreSQL) ---
POSTGRES_SERVER=postgres
POSTGRES_USER=modify_user
POSTGRES_PASSWORD=modify_password
POSTGRES_DB=modify_db
POSTGRES_PORT=5432
# Connection Pool
DB_POOL_SIZE=30
DB_MAX_OVERFLOW=20

# --- VECTOR DB (pgvector) ---
# Phase 3 CLIP Model Dimension (Must match model output)
EMBEDDING_DIMENSION=768

# --- REDIS (Cache & Celery Broker) ---
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# --- AI SERVICE & GOOGLE API ---
# Google Custom Search & Vision API Key
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_cse_id

# --- CELERY WORKER ---
# Seconds
CELERY_TASK_TIME_LIMIT=600

# --- STORAGE ---
# local | s3
STORAGE_TYPE=local
LOCAL_STORAGE_PATH=/app/storage
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_BUCKET_NAME=
AWS_REGION=ap-northeast-2